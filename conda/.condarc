default_channels:
  - conda-forge

channels:
  - defaults

channel_priority: strict
auto_update_conda: false
notify_outdated_conda: false

pkgs_dirs:
  - ~/.local/share/miniforge3/pkgs

envs_dirs:
  - ~/.local/share/miniforge3/envs

conda-build:
  root-dir: ~/.local/share/miniforge3/conda_builds

auto_activate_base: false

